# Django Background Remover Environment Variables
# Copy this file to .env and update the values for your deployment

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================

# Django Secret Key (REQUIRED - Generate a new one for production!)
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here

# Debug Mode (Set to False for production)
DJANGO_DEBUG=False

# Allowed Hosts (comma-separated list)
# For Render.com, you can use * or specify your domain
DJANGO_ALLOWED_HOSTS=*

# Settings Module
DJANGO_SETTINGS_MODULE=bg_remover.settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (Automatically set by Render.com for PostgreSQL)
# Format: postgres://username:password@hostname:port/database_name
DATABASE_URL=postgres://user:password@localhost:5432/django_bg_remover

# =============================================================================
# BACKGROUND REMOVAL SETTINGS
# =============================================================================

# Background removal method: auto, rembg, opencv, pillow
BACKGROUND_REMOVAL_METHOD=rembg

# =============================================================================
# RENDER.COM SPECIFIC VARIABLES
# =============================================================================

# Render automatically sets this to True in production
RENDER=True

# Python version for Render.com
PYTHON_VERSION=3.11.0

# Web concurrency (number of worker processes)
WEB_CONCURRENCY=4

# =============================================================================
# OPTIONAL: SUPERUSER CREATION (for initial deployment)
# =============================================================================

# These are used during the build process to create an admin user
# Remove or comment out after first deployment for security
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password-here

# =============================================================================
# DEVELOPMENT ONLY VARIABLES
# =============================================================================

# For local development, you might want to set:
# DJANGO_DEBUG=True
# DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
# (No DATABASE_URL needed - will use SQLite)

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file with real values to version control
# 2. Generate a new SECRET_KEY for each environment
# 3. Use strong passwords for superuser accounts
# 4. Remove superuser environment variables after initial setup
# 5. Consider using Render's built-in secret management for sensitive data
